@model IList<Umi.Core.Endpoint>
<!DOCTYPE html>
<html>
<head>
    <title>Umi</title>
    <style>
        body {
            background-color: #EFEFEA;
            margin: 0px;
        }

        * {
            font-family: "Open-Sans", Arial, "Sans-Serif";
        }

        header {
            margin: 0px;
            padding: 1% 22%;
            background-color: #c0e4f1;
            width: 100%;
            height: 5%;
            color: #338ba4;
            background-image: url('/umi/assets/logoUmi.png');
            background-size: 86px;
            background-repeat: no-repeat;
            background-position-y: 50%;
            background-position-x: 8%;
        }

        article {
            margin: 0px;
            padding: 1% 5%;
            width: 50%;
            margin: 0px auto;
            height: 95%;
            background-color: #FFF;
        }

        .endpoint {
            color: #87A9FF;
            font-weight: bold;
        }

        .left {
            width: 90%;
            display: inline-block;
            margin: 10px 0px;
        }

        .right {
            width: 10%;
        }

        .ok, .nok {
            border-radius: 10px;
            background-color: tomato;
            border-radius: 20px;
            padding: 6px 8px;
            color: white;
        }

        .ok {
            background-color: #a8e052;
            padding: 6px 9px;
        }
    </style>
</head>
<body>
    <header>
        <h1>Status page</h1>

    </header>
    <article>
        @if (Model.Any())
        {
            <p>
                These application Uri's are currently present.
            </p>

            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <span class="left">
                            <a href="@item.Uri" class="endpoint" target="_blank">@item.Uri</a>
                        </span>
                        <span class="right">
                            @if (item.TestResult.Ok)
                            {
                                <span class="ok">&#10004;</span>
                            }
                            else
                            {
                                <span class="nok">&#10006;</span>
                            }
                        </span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>
                No endpoints registered, to register some please include using Umi.Core and;
            </p>
            <ul>
                <li><pre>"string.with.url".RegisterAsEndpoint()</pre></li>
                <li><pre>new Uri().RegisterAsEndpoint()</pre></li>
                <li>
                    <pre>
                -- Todo -
                -app.UseUmi(options =>
                { 
                    options.ScaffoldWfc = true;
                });
                </pre>
                </li>
            </ul>
        }
    </article>
</body>
</html>